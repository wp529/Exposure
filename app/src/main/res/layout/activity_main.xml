<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表布局" />

    <Button
        android:id="@+id/tvListCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表布局有遮挡" />

    <Button
        android:id="@+id/tvGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网格布局" />

    <Button
        android:id="@+id/tvStagger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="瀑布流布局" />

    <Button
        android:id="@+id/tvVpFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VP+Fragment中使用" />

    <Button
        android:id="@+id/tvHorizontalRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="横向滚动的RV" />

    <Button
        android:id="@+id/tvRvInScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RV被嵌套在可滚动控件中的情况" />

    <Button
        android:id="@+id/tvChildCanExposure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RV里子View设置曝光数据的情况" />

    <Button
        android:id="@+id/tvCollectViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收集ViewGroup子View曝光数据" />

    <Button
        android:id="@+id/tvRVInRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RV嵌套RV的情况" />
</LinearLayout>